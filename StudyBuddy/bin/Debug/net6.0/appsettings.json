{
    "Serilog": {
      "Using": [ "Serilog.Sinks.File" ],
      "MinimumLevel": "Error",
      "WriteTo": [
        {
          "Name": "File",
          "Args": {
            "path": "logs/log.txt",
            "rollingInterval": "Day",
            "rollOnFileSizeLimit": true,
            "fileSizeLimitBytes": "512",
            "retainedFileCountLimit": 3,
            "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
          }
        },
        {
          "Name": "Console"
        }
      ]
    },

    "AllowedHosts": "*",
    "NotificationSettings": {
      "NotificationTime": "10:00:00",
      "RepetitionPeriod": "24:00:00"
    },
    "ConnectionStrings": {
      "DefaultConnection": "Server=.\\SQLExpress;Database=StudyBuddy;Encrypt=False;Integrated security=true"
    },
    "JwtSettings": {
      "Key": "1868E4E0-5CE2-45DF-A7CD-54F08C498C70",
      "ExpirationInMinutes": 120,
      "Issuer": "localhost",
      "Audience": "localhost"
    }
  }
